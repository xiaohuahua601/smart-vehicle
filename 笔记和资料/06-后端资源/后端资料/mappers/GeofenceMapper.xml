<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.tedu.ivos.geofence.mapper.GeofenceMapper">
    <select id="selectGeofence" resultType="cn.tedu.ivos.geofence.pojo.vo.GeofenceVO">
        SELECT id,name,status,position,create_time
        FROM geofence
        <where>
            <if test="id!=null">
                AND id=#{id}
            </if>
            <if test="name!=null and name!=''">
                AND name LIKE CONCAT('%',#{name},'%')
            </if>
            <if test="status!=null and status!=''">
                AND status=#{status}
            </if>
            <if test="position!=null and position!=''">
                AND position LIKE CONCAT('%',#{position},'%')
            </if>
            <if test="createTime!=null">
                AND create_time=#{createTime}
            </if>
        </where>
    </select>
    <insert id="insert">
        INSERT INTO geofence(name,status,position,create_time)
        VALUES(#{name},#{status},#{position},#{createTime})
    </insert>

    <update id="update">
        UPDATE geofence
        <set>
            <if test="name!=null and name!=''">
                name=#{name},
            </if>
            <if test="status!=null and status!=''">
                status=#{status},
            </if>
            <if test="position!=null and position!=''">
                position=#{position},
            </if>
            <if test="createTime!=null">
                create_time=#{createTime},
            </if>
        </set>
        WHERE id=#{id}
    </update>
    <delete id="deleteById">
        DELETE FROM geofence WHERE id=#{id}
    </delete>
</mapper>